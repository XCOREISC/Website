	// Arrows mini sliders	 
	.arrow.left-service,.arrow.right-service
		top 7.5rem
	.nav-social.header a:first-child
		margin-left 9rem	
	.clear-sm 
		clear none

	/***************** desktop**************/
	.button.nav
		display none	
	.outer-nav
		position relative
		clearfix()
		width 100%
		&.vertical
			top 0
			transform:none
		& a
			float left
			width 20%
			transform none
			margin: 0
			text-align center
		&.left 
			left 0
		&.right 
			right 0
	.effect-airbnb .outer-nav a
		opacity 1
		transform none
/********************* lg *************/
@media only screen and (min-width: 1440px) 
	html 
		font-size: 85%
	.swiper-container.service
		margin-top 2.9rem
	.sm 
		width 50%