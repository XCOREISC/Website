@import "__constants/variables.styl"
@import "__constants/mixins.styl"

.logo-xcoreisc
	display block
	square(100%)
	block-center()
	background-color COLOR_WHITE
	padding 15%
header
	position absolute
	width 100%
	left 0
	top 0
	z-index 21
.nav-main
	position relative
	height 100%
	& > a 
		display block
		padding .5rem 0
		color COLOR_WHITE
		text-align center
		font-size 1rem
		transition all .3s ease
		&:first-child
			padding 0
		& svg
			display block
			block-center()
			square(30%)
			fill: COLOR_WHITE
		&:hover
			background-color COLOR_WHITE
			color COLOR_THEME
			& svg
				fill: COLOR_THEME
.bck-twitter
	background-color COLOR_TWITTER
