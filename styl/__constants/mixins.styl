@import "vendor.styl"
/************************* FIXS ****************************/
clearfix() 
	&:before,
	&:after 
		content " "
		display table 
	&:after
		clear: both
/************************** BLOCKS *******************************************/
block-center()
	display block
	margin-left auto
	margin-right auto

square(X)
	width X
	height X
/************************************** DECORATORS *************************************/
radius(radius)
	border-radius radius
/************** cronograma************************/

actividad(varC=false,varP=false,varI=false,varT=false)
	background-color transparent
	padding 1rem 
	position relative
	& > div,& a >div
		background-color COLOR_WHITE
		border .2rem solid COLOR_THEME
		padding 1rem 0
		border-radius (BASE_SPACE/2.5)
		cursor pointer
		position relative
		transition: all 0.3s ease-out
		&:before
			position absolute
			top 0
			right 0
			border-radius 0 (BASE_SPACE/4) 0 (BASE_SPACE/4)
			padding 0 (BASE_SPACE/2)
			color white
	if varC
		& > div:before
			content "Conferencia"
			background-color COLOR_PURPLE
	if varP
		& > div:before
			content "Protocolo"
			background-color COLOR_THEME
	if varI
		& > a > div
			position relative
			transition: all 0.3s ease-out
			&:hover
				background-color rgba(231, 76, 60,.8)
				color COLOR_WHITE
			&:before
				content "Ignite"
				background-color COLOR_RED
			
	if varT
		& > div
			padding 4.3rem 0
		& > div:before
			content "Taller"
			background-color COLOR_GREEN
		&:after
			content ""


