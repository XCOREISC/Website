@import "__constants/variables.styl"
@import "__constants/mixins.styl"

.float-left
	float left
.display-block
	display block
.block-center
	block-center()
.clear 
	clear both
.overflow-hidden
		overflow hidden
.overflow-visible
		overflow visible
.responsive
	max-width 100%
/************************** WIDTH ***********************/
.w5
	width 5rem
.w10
	width 10rem
.w15
	width 15rem
.w13
	width 13rem
.w60
	width 60%
.w100
	width 100%
.h5
	height 5rem
/*********************** BORDERS ***********/
.border-bottom 
	border-bottom .1rem solid COLOR_WHITE
/**************** BACKGROUNDS ***********/
.bck-white
	background-color COLOR_WHITE
	color COLOR_DARK
.bck-opacity
	background-color rgba(0,0,0,.5)
.bck-theme
	background-color COLOR_THEME
.bck-dark
	background-color COLOR_DARK
.bck-black
	background-color COLOR_BLACK
.bck-cover
	background-size cover
.bck-red
	background-color COLOR_RED
.bck-glass
	background-color rgba(0, 51, 102, 0.3)
.bck-glass-dark
	background-color rgba(0,0,0,.4)

.border-bottom-theme
	border-bottom .1rem solid rgba(255,255,255,.5)
.border-right-theme
	border-right .1rem solid rgba(255,255,255,.5)

/**************** COLORS ****************/
.color-white
	color COLOR_WHITE
.color-red
	color COLOR_RED
/***************** MARGINS, PADDINGS ********/
.margin-none  
	margin: 0
.margin  
	margin:  BASE_SPACE
.margin-2  
	margin:  BASE_SPACE*2
.margin-left  
	margin-left:  BASE_SPACE
.margin-right  
	margin-right: BASE_SPACE
.margin-top  
	margin-top:  BASE_SPACE
.margin-top-2  
	margin-top:  BASE_SPACE*2
.margin-top-3  
	margin-top:  BASE_SPACE*3
.margin-top-4  
	margin-top:  BASE_SPACE*4
.margin-top-6  
	margin-top:  BASE_SPACE*6
.margin-bottom  
	margin-bottom:  BASE_SPACE
.margin-bottom-2  
	margin-bottom:  BASE_SPACE*2
.margin-bottom-4  
	margin-bottom:  BASE_SPACE*4
.padding-none  
	padding: 0
.padding  
	padding:  BASE_SPACE
.padding-small  
	padding: (BASE_SPACE/2 )
.padding-small-top  
	padding: (BASE_SPACE/2 ) 0

.padding-left  
	padding-left:  BASE_SPACE
.padding-right  
	padding-right:  BASE_SPACE
.padding-right-2  
	padding-right:  BASE_SPACE*2
.padding-top  
	padding-top:  BASE_SPACE
.padding-bottom  
	padding-bottom:  BASE_SPACE
.padding-top-2  
	padding-top:  BASE_SPACE*2
.padding-bottom-2  
	padding-bottom:  BASE_SPACE*2
.padding-top-4  
	padding-top:  BASE_SPACE*4
.padding-bottom-4  
	padding-bottom:  BASE_SPACE*4

/****************** figures *************************/
.subtitle
	display block
	color COLOR_WHITE 
	text-align center
	padding (BASE_SPACE/2) 0
.button
	position relative
	padding .5rem 1rem
	text-align center
	cursor porinter
	border-radius (BASE_SPACE/2)
	box-shadow 0 .2rem COLOR_DARK
	& .fa 
		margin-right .5rem
	&.nav
		padding .5rem
		box-shadow none
		margin 1rem 
		display block
		square(3rem)
		& > span
			display block
			block-center()
			font-size 2rem
.img-service
	square(8rem)
	display block
	border .2rem solid COLOR_RED
	block-center() 
	border-radius 50%
.padding-button
	display block
	padding 1rem 0
.radius 
	border-radius 1rem
.radius-1100 
	border-radius 1rem 1rem 0 0

.navbar
	clearfix() 
	& > div
		border-top .1rem solid COLOR_WHITE
		border-left .1rem solid COLOR_WHITE
		border-right .1rem solid COLOR_WHITE
		&:first-child
			border-radius 1rem 1rem 0 0
		&:last-child
			border-radius 0 0 1rem 1rem 
			border-bottom .1rem solid COLOR_WHITE
	& a 
		display block
		float left 
		width 25%
		text-align center
		padding .5rem 0
		border-top .1rem solid COLOR_WHITE
		border-bottom .1rem solid COLOR_WHITE
		border-right .1rem solid COLOR_WHITE
		&:first-child
			border-left .1rem solid COLOR_WHITE
			border-radius 1rem 0 0 1rem
		&:last-child
			border-radius 0 1rem 1rem 0 
